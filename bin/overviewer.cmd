@echo off
set WORLD_NAME=burpcraft
set VERSION_MINECRAFT=1.16.2
set VERSION_OVERVIEWER=0.16.8

set PATH_OVERVIEWER_SCRIPT=%~dp0%
set PATH_OVERVIEWER_SCRIPT=%PATH_OVERVIEWER_SCRIPT:~0,-1%
set PATH_OVERVIEWER_ROOT=%PATH_OVERVIEWER_SCRIPT:~0,-4%
set PATH_OVERVIEWER_WORLDS=%PATH_OVERVIEWER_ROOT%\worlds

set PATH_OVERVIEWER_EXEC=%PATH_OVERVIEWER_SCRIPT%\windows\overviewer-%VERSION_OVERVIEWER%\overviewer.exe

set PATH_OVERVIEWER_WORLD=%PATH_OVERVIEWER_WORLDS%\%WORLD_NAME%
set PATH_OVERVIEWER_OUTPUT=%PATH_OVERVIEWER_ROOT%\dist\%WORLD_NAME%

echo Minecraft:    %VERSION_MINECRAFT%
echo Version:      %VERSION_OVERVIEWER%
echo World Name:   %WORLD_NAME%
echo.
echo Root Path:    %PATH_OVERVIEWER_ROOT%
echo Scripts Path: %PATH_OVERVIEWER_SCRIPT%
echo Worlds Path:  %PATH_OVERVIEWER_WORLDS%
echo Overviewer:   %PATH_OVERVIEWER_EXEC%
echo.
echo Input:        %PATH_OVERVIEWER_WORLD%
echo Ouput:        %PATH_OVERVIEWER_OUTPUT%

%PATH_OVERVIEWER_EXEC% --config=%PATH_OVERVIEWER_ROOT%\render.conf
